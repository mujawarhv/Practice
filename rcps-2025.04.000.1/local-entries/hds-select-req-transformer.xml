<syn:localEntry xmlns:syn="http://ws.apache.org/ns/synapse" key="hds-select-req-transformer" type="1">
	<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema‐instance" xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/"
		xmlns:tem="http://tempuri.org/"
		xmlns:icad="http://schemas.datacontract.org/2004/07/ICADM.CPAPISearch.Service.DataContracts"
		version="2.0">
		<xsl:output method="xml" omit-xml-declaration="yes" indent="yes" />
		<xsl:param name="ncpdp" />

		<xsl:template match="/">
			<tem:ProviderSelect>
				<tem:request>
					<xsl:element name="icad:AddressSurroId">
						<xsl:value-of select="/RxcomPrescriberSelectRequest/Select/rcpsIdNum" />

					</xsl:element>
					<xsl:element name="icad:pharmacyNCPDP">
						<xsl:value-of select="$ncpdp" />
					</xsl:element>
					<xsl:element name="icad:UserTransactionNumber">
						<xsl:value-of select="/RxcomPrescriberSelectRequest/Select/userTransactionNumber" />
					</xsl:element>
				</tem:request>
			</tem:ProviderSelect>
		</xsl:template>
	</xsl:stylesheet>
</syn:localEntry>